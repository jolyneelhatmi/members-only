extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name ' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text' placeholder='Family name ' name='family_name' required='true' value=(undefined===user ? '' : user.family_name))
      label(for='username') username:
      input#username.form-control(type='text' placeholder='username ' name='username' required='true' value=(undefined===user ? '' : user.username) )
      label(for='password') Password:
      input#password.form-control(type='text' placeholder='password ' name='password' required='true' value=(undefined===user ? '' : user.password))
      label(for='confirmPassword') Password:
      input#confirmPassword.form-control(type='text' placeholder='rewrite your password ' name='confirmPassword')
      label(for='passcode') Member passcode:
      input#passcode.form-control(type='text' placeholder='passcode to become a member ' name='passcode')
      label(for='admincode') Admin passcode:
      input#admincode.form-control(type='text' placeholder='passcode to become an admin ' name='admincode')
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
